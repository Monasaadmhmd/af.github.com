@require "_common"

circle-prefix($color) {
    content: ''
    display: inline-block
    height: 8px
    width: 8px
    border-radius: 50%
    margin-right: 5px
    background: $color
    box-shadow: 0 0 3px rgba(0,0,0,0.2)
}

@keyframes pulseSize
    0%
        transform: scale(1)
    30%
        transform: scale(1.2)
    70%
        transform: scale(1)

.blogPosts
    margin-top: 5rem
    margin-bottom: 5rem

