@require "_common"


flexboxCenter()
    // Prefixed versions for safari:
    display: -webkit-flex
    -webkit-justify-content: center
    -webkit-align-items: center

    display: flex
    justify-content: center
    align-items: center


// Homepage styles
section.homepage
    margin: 2rem 0
    position: relative

    &.loading:before
        content: 'Loading data...'
        position: absolute
        width: 100%
        margin: 5rem
        pointer-events: none
        opacity: 0.5
        text-align: center
        font-style: italic

    &.loading.failed:before
        content: "Sorry, failed to load the data. Refresh and try again?"

    > header
        display: block
        position: relative
        width: $dimensions.leftColWidth
        padding-right: 2rem
        float: left
        text-align: right
        height: 100%
        overflow: hidden

        @media screen and (max-width: 400px)
            font-size: 0.9rem
            padding-right: 0.3rem

        a
            display: block
            color: #999
            font-style: italic
            padding: 0.3em 0
            border-top: 4px solid
            transition: margin-right 0.3s

            &:hover
                margin-right: -1rem

            &:before
                content: 'Â» '
                vertical-align: top

    h2
        margin: 0
        text-transform: lowercase
        color: #444
        font-weight: 300

    &.code
        height: 350px

        a
            color: rgba($colours.sections.code, 0.6)

    &.posts
        height: 150px

        a
            color: $colours.sections.posts

    &.links
        height: 280px

        a
            color: $colours.sections.links

.homepage svg
    display: block
    width: 100% - $dimensions.leftColWidth
    height: 100%

    .xAxis
        fill: #ccc
        font-weight: bold
        font-size: 1.6rem

        path
            stroke: #ccc
            stroke-width: 2px
        line
            stroke: #ccc
            stroke-width: 2px

.posts svg, .links svg
    g
        text
            display: none

            &.date
                font-size: 0.8rem
        a:hover ~ text
            display: block

        line
            display: none
            stroke: black
        a:hover line
            display: block

    circle
        fill: rgba($colours.sections.posts, 0.8)

        &:hover
            fill: black

.links svg
    circle
        fill: rgba($colours.sections.links, 0.5)

        &:hover
            fill: black

    .linkLabel
        font-size: 0.9rem
        display: block
        fill: #999


.code svg
    g.repo
        path
            transition: opacity 0.5s
            opacity: 0.5
            fill: rgba($colours.sections.code, 0.8)

        a
            transition: all 0.4s

            &:hover *
                opacity: 1

        text
            fill: #333
            font-size: 1rem
            opacity: 0
            transition: all 0.4s

            &.name
                opacity: 1

            tspan.language
                fill: #999
                font-size: 0.9em

            .description
                opacity: 0
                font-size: 0.8rem

        &:hover .description
            opacity: 1

        rect
            fill: transparent
