$colours = {
    cta: darken(#8BC84B, 20%),
    bodyBg: #f7f7f7,
    codeBg: #eeeee7,

    sections: {
        code: #5a6,
        posts: #56a,
        links: rgb(220, 180, 50)
    }
}

$dimensions = {
    leftColWidth: 20%,
    gutterWidth: 2rem
}


*
    box-sizing: border-box

html, body
    height: 100%

body
    position: relative
    margin: 0
    min-width: 320px
    background: $colours.bodyBg
    -webkit-font-smoothing: antialiased

p
    line-height: 1.4
    margin: 0 0 1.4em

a, a.visited
    color: $colours.cta
    text-decoration: none
    transition: color 0.3s

    &:hover
        color: lighten($colours.cta, 30%)

pre
    background: $colours.codeBg
    padding: 0.2em

code
    background: $colours.codeBg
    padding: 3px
    font-size: 1rem

    pre &
        display: block
        padding: 0.5rem
        overflow: auto

