$colours = {
    cta: rgba(#fff, 1),
    bodyBg: #52A174,
    codeBg: rgba(#fff, 0.1)
    text: white,
}

$breakpoints = {
    midsize: 500px,
    desktop: 800px
}

$dimensions = {
    leftColWidth: 20%,
    gutterWidth: 1rem
}

$mainFont = Roboto, sans-serif


*
    box-sizing: border-box

html, body
    height: 100%

body
    position: relative
    margin: 0
    min-width: 320px
    background: url(/img/ribbon-bg-jumbo.svg) center no-repeat fixed
    background-color: $colours.bodyBg
    background-size: 100%
    color: $colours.text
    font-family: $mainFont
    font-size: 18px
    -webkit-font-smoothing: antialiased

p
    line-height: 1.5
    margin: 0 0 1.4em

a, a.visited
    color: $colours.cta
    text-decoration: none
    border-bottom: 2px solid rgba($colours.text, 0.2)
    padding: 0 1px
    font-weight: 600
    transition: border-color 0.2s

    &:hover
        border-bottom-color: $colours.text

pre
    background: $colours.codeBg
    padding: 0.2em
    border-radius: 3px

code
    background: $colours.codeBg
    padding: 3px
    font-size: 1rem

    pre &
        display: block
        padding: 0.5rem
        overflow: auto

.container
    max-width: 1040px
    min-width: 300px
    margin-left: auto
    margin-right: auto
    padding: 0 1rem

.siteHeader
    padding-top: 2rem
    padding-bottom: 2rem

    .logo
        border: none
        background: none
        display: inline-block
        transition: transform 0.2s

        &:hover
            transform: scale(1.1)
