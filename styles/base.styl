@require "_common"

*
    box-sizing: border-box

html
    height: 100%

body
    position: relative
    margin: 0
    min-width: 321px
    background:
        url(/img/bg.svg) center no-repeat fixed,
        linear-gradient($colours.bodyTopBg 100px, $colours.bodyBottomBg) fixed
    background-color: $colours.bodyTopBg
    background-size: cover
    color: $colours.text
    font-family: $mainFont
    font-size: 18px
    min-height: 100%
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale

h1
    font-size: 1.4em

p
    line-height: 1.5
    margin: 0 0 1.4em
li
    line-height: 1.5
    margin: 0 0 0.5em

a, a.visited
    color: inherit
    text-decoration: none
    border-bottom: 2px solid $colours.cta
    padding: 0 1px
    transition: color 0.1s

    &:hover
        color: $colours.cta

pre
    padding: 0.2em

code
    background: $colours.codeBg
    padding: 2px 5px
    border-radius: 3px
    font-size: 1rem

    pre &
        display: block
        padding: 1rem
        border-radius: 0.5rem
        overflow: auto

blockquote
    font-style: italic
    margin-left: 0
    padding-left: 1em
    border-left: 5px solid rgba(#fff, 0.3)
    opacity: 0.8

.container
    max-width: 1040px
    min-width: 300px
    margin-left: auto
    margin-right: auto
    padding: 0 1rem

.siteHeader
    .container
        display: flex
        flex: 1
        justify-content: space-between
        padding-top: 1.5rem
        padding-bottom: 3rem

    .logo
        border: none
        background: none
        display: inline-block

    nav
        display: flex
        align-items: center

        a
            border-bottom: none
            padding-left: 2em
            font-weight: bold
            font-size: 0.9em
            text-transform: uppercase

            &:hover
                opacity: 1

.sectionHeading
    display: flex
    justify-content: space-between
    align-items: baseline
    text-transform: uppercase
    letter-spacing: 0.06em
    margin-bottom: 1em

    h2
        color: $colours.subhead
        flex: 1
        margin: 0
        margin-right: 1em
        font-size: 0.9rem
        font-weight: 600
        opacity: 0.7

    .more
        font-size: 0.8rem

        &:after
            content: ' â€º'
            font-size: 1.5em

.postListItem
    display: flex
    align-items: baseline
    margin-bottom: 1em

    h1
        margin: 0
        flex: 1
        font-size: inherit
        margin-bottom: 0.2em

    a
        border-bottom: none

    .readTime
        font-size: 0.75em
        font-weight: 600
        opacity: 0.5

    time
        flex: 5.5em 0 0
        margin-right: 1em
        font-size: 0.85em
        opacity: 0.5
