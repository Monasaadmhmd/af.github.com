@require "_mixins"
@require "_common"
@require "_fonts"

.posts
    padding: 0

    > li
        list-style: none

    h1
        font-weight: 300
        margin-bottom: 0
        line-height: 1

    time
        display: block
        opacity: 0.6
        font-weight: bold
        font-size: 1.1rem

// Blog post article styles
.post
    max-width: 43em

    header
        time[pubdate]
            display: block
            margin-bottom: 2rem
            font-weight: 600
            opacity: 0.6

    h1
        margin: 1.4rem 0 0.2rem
        font-size: 2rem
        line-height: 1

    h2, h3, h4
        margin: 2rem 0 1rem
    h2
        font-size: 1.7rem
        font-weight: 300
        font-style: italic
    h3, h4
        font-size: 1rem

    img
        max-width: 100%

    footer
        margin: 2rem 0
        padding: 1.5rem 0 3rem
        border-top: 1px solid rgba(#fff, 0.2)
        font-size: 1rem

        p
            margin: 0
            opacity: 0.9

    .latest
        margin: 2rem 0 0

        time
            display: inline-block
            font-weight: bold
            opacity: 0.5
            min-width: 5em

        > h2
            font-weight: normal
            font-size: 1.4em
            margin: 0 0 0.3rem
            font-style: normal

            @media screen and (min-width: 800px)
                width: 250px
                margin-left: -250px
                padding-right: $dimensions.gutterWidth
                text-align: right
                float: left
                line-height: 0.8

                &:after
                    content: ' Â»'

        .item
            line-height: 1.4

        .viewall
            display: inline-block
            padding: 3px 10px
            margin-top: 0.5rem
            border: 1px solid currentColor
            border-radius: 3px
            font-size: 0.9em

            &:hover
                color: white
                background: $colours.cta
