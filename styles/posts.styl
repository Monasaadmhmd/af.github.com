@require "_common"

$contentMaxWidth = 45rem

.post_list
    margin-bottom: 4em

.postFooter
    max-width: $contentMaxWidth
    margin: 2rem 0
    padding: 1.5rem 0 3rem
    border-top: 1px solid rgba(#fff, 0.2)
    font-size: 0.9rem

    p
        margin: 0 0 0.3em
        opacity: 0.9
        text-align: center

    .latest
        margin-top: 2em

        time
            display: inline-block
            min-width: 5em
            margin-right: 1em
            opacity: 0.8
            font-weight: normal
            font-size: 0.8em

        .item
            line-height: 1.6
            font-weight: bold
            font-size: 1.2em
