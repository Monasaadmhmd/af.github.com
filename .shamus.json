{
    "window": {
        "alwaysOnTop": true,
        "top": 0,
        "right": 0
    },

    "watcher": {
        "paths": ["js", "css"]
    },

    "tasks": [
        {
            "name": "Browserify",
            "command": "npm run build_js",
            "parser": "exitcode",
            "fileMatcher": "\\.js$"
        },
        {
            "name": "JSHint",
            "command": "jshint js",
            "parser": "exitcode",
            "fileMatcher": "\\.js$"
        },
        {
            "name": "Stylus",
            "command": "npm run build_css",
            "parser": "exitcode",
            "fileMatcher": "\\.styl$"
        }
    ]
}

