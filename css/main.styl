$green = #8BC84B

// Helpful utilities stolen from the stylus docs:
vendor(prop, args)
    -webkit-{prop} args
    -moz-{prop} args
    {prop} args

clearfix()
    &:before
    &:after
        content: ""
        display: table
    &:after
        clear: both
    zoom: 1

// Icon font:
@font-face
    font-family: 'icomoon'
    src:url('/fonts/icomoon.eot')
    src:url('/fonts/icomoon.eot?#iefix') format('embedded-opentype'), \
        url('/fonts/icomoon.svg#icomoon') format('svg'), \
        url('/fonts/icomoon.woff') format('woff'), \
        url('/fonts/icomoon.ttf') format('truetype')
    font-weight: normal
    font-style: normal

*
    box-sizing: border-box

p
    line-height: 1.4
    margin: 0 0 1.4em

a, a.visited
    color: $green
a:hover
    color: darken($green, 20%)


body
    font-family: 'Fanwood Text', sans-serif
    font-size: 19px
    color: #334
    background: $green
    margin:0
    -webkit-font-smoothing: antialiased

// Main site sidebar:
body > header
    width: 340px
    height: 100%
    padding: 20px
    background: #eee
    position: absolute
    z-index: 10
    left: 0
    box-shadow: 0 0 10px rgba(0,0,0,0.4)

    .title
        clearfix()

    .avatar
        float: left
        margin-right: 0.8rem
        position: relative
        border: 1px solid #999

    h1
        font-size: 2.1rem
        margin: 0.5em

    h2
        margin: 2rem 0 0.5rem
        font-size: 1rem
        text-transform: uppercase

    ul
        margin: 0
        padding: 0
        list-style-type: none


.work, .tools, .location, .github, .twitter
    color: inherit
    text-decoration: none

    &:before
        display: inline-block
        width: 1em
        text-align: center
        margin-right: 7px
        font: normal 1.4em 'icomoon'
        text-decoration: none
        font-style: normal
        speak: none
        text-shadow: 0 1px 0 #eee
        -webkit-font-smoothing: antialiased

        position: relative
        top: 3px
        color: #999


.work:before
    content: "\21"
.tools:before
    content: "\22"
.location:before
    content: "\25"
.twitter:before
    content: "\23"
.github:before
    content: "\24"

// Prevent the homepage canvas from introducing scrollbars
.hp_canvas_wrap
    height: 100%
    width: 100%
    position: absolute
    top: 0
    left: 0
    overflow: hidden
