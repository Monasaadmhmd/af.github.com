@import "_common"

$postsColour = rgba(30, 45, 90, 0.5)
$linksColour = rgba(220, 180, 50, 0.5)
$codeColour = rgba(30, 145, 90, 0.5)

flexboxCenter()
    display: flex
    justify-content: center
    align-items: center


// Homepage styles
section.homepage
    margin-bottom: 2rem

    &.code
        height: 300px

        > a
            color: $codeColour
            border-color: $codeColour
    &.posts
        height: 120px

        > a
            color: $postsColour
            border-color: $postsColour
    &.links
        height: 150px

        > a
            color: $linksColour
            border-color: $linksColour

    > a
        display: block
        flexboxCenter()
        width: 20%
        float: left
        text-align: center
        height: 100%
        border-left: 1rem solid rgba(255,255,255,0.3)

        &:before
            font: normal 1.3em 'icomoon'
            margin-right: 0.3em

    h2
        display: inline

    &.code a:before
        content: "\24"
    &.links a:before
        content: "\22"

.homepage svg
    display: block
    width: 80%

.posts svg, .links svg
    g
        text
            display: none

            &.date
                font-size: 0.8rem
        a:hover ~ text
            display: block

        line
            display: none
            stroke: black
        a:hover line
            display: block

    circle
        fill: $postsColour

        &:hover
            fill: black

.links svg
    circle
        fill: $linksColour

        &:hover
            fill: black


.code svg
    g.repo
        path
            transition: opacity 0.5s
            opacity: 0.5
            fill: $codeColour

        a
            transition: all 0.4s

            &:hover *
                opacity: 1

        text
            fill: #333
            font-size: 1rem
            opacity: 0
            transition: all 0.4s

            &.name
                opacity: 1

            tspan.language
                fill: #999
                font-size: 0.9em

            .description
                opacity: 0
                font-size: 0.8rem

        &:hover .description
            opacity: 1

        rect
            fill: transparent
