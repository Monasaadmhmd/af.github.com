$green = #8BC84B
$backgroundColour = #eee

*
    box-sizing: border-box

p
    line-height: 1.4
    margin: 0 0 1.4em

a, a.visited
    color: inherit
    text-decoration: none
    background: lighten($green, 95%)
    padding: 0 3px;
    border-bottom: 1px solid lighten($green, 20%)
    transition: all 0.3s

a:hover
    border-bottom: 3px solid $green
