<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link href="/assets/main.css" rel="stylesheet" type="text/css">
    <link href="/img/favicon.png" type="image/png" rel="shortcut icon">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link type="application/atom+xml" rel="alternate" href="{{ site.url}}/atom.xml" title="{{ site.title }}" />

    {% for domain in page.preconnect_domains %}
        <link rel="preconnect" href="{{ domain }}" crossorigin />
    {% endfor %}

    {% if page.keywords %}
    <meta name="keywords" content="{{ page.keywords }}" />
    {% else %}
    <meta name="keywords" content="Aaron Franks, programming, software, Victoria" />
    {% endif %}

    <meta name="author" content="{{ site.author }}" />
    <title>
        {% block title %}{{ title }} | {{ site.title }}{% endblock %}
    </title>
    <meta name="description" content="{{ metaDescription }}">
    <meta property="article:published_time" content="{{ post.date | date("YYYY-MM-DDTHH:mm:ssZ") }}" />
</head>
<body>
    {% block content %}
        {% if isRawHtmlPage %}
            {{ content | safe }}
        {% else %}
            {{ content }}
        {% endif %}
    {% endblock %}

    <script src="/assets/main.js"></script>
    {% include "analytics_script.njk" %}
</body>
</html>
